{
  "manifest_version": 3,
  "name": "EC Site Input Setter",
  "version": "1.0",
  "permissions": ["storage", "scripting"],
  "options_page": "options.html",
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://admin.shopify.com/store/umeboys/orders/*"],
      "js": ["content.js"]
    }
  ]
}
